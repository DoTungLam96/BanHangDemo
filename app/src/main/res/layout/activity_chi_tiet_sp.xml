<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="com.example.admin.banhangdemo.activity.ChiTietSPActivity">
    <android.support.v7.widget.Toolbar
        app:titleTextColor="#FFF"
        android:background="#4b806f"
        app:title="Chi tiết sản phẩm"
        android:layout_width="match_parent"
        android:id="@+id/toolbarChiTiet"
        android:layout_height="?actionBarSize"></android.support.v7.widget.Toolbar>
<LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <ImageView
        android:padding="5dp"
        android:id="@+id/imgHinhChiTiet"
        android:layout_width="170dp"
        android:layout_height="180dp" />
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <TextView
        android:textColor="#ca3550"
        android:layout_margin="5dp"
        android:text="Ten"
        android:textStyle="bold"
        android:textSize="19sp"
        android:id="@+id/txtChiTietTen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
        <TextView
            android:textColor="#3a6b3a"
            android:layout_margin="5dp"
            android:text="gia"
            android:textStyle="italic"
            android:textSize="17sp"
            android:id="@+id/txtChiTietGia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Spinner
            android:layout_marginTop="10dp"
            android:background="@drawable/spinner"
            android:layout_marginLeft="5dp"
            android:id="@+id/spinner"
            android:layout_width="match_parent"
            android:layout_height="34dp"></Spinner>
        <Button
            android:layout_marginTop="10dp"
            android:textColor="#31688b"
            android:text="Thêm vào giỏ hàng"
            android:id="@+id/btnAddCart"
            android:layout_marginLeft="5dp"
            android:background="@drawable/btn_click"
            android:layout_width="match_parent"
            android:layout_height="34dp" />

    </LinearLayout>

</LinearLayout>

    <TextView
        android:layout_marginTop="10dp"
        android:textColor="#eaa43425"
        android:textSize="18sp"
        android:layout_marginLeft="5dp"
        android:text="Thông tin chi tiết sản phẩm "
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <ScrollView
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="#514a4a"
            android:textSize="16sp"
            android:layout_margin="10dp"
            android:id="@+id/txtChiTietMota"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </ScrollView>
</LinearLayout>
