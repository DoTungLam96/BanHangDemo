<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_1"
    tools:context="com.example.admin.banhangdemo.activity.ThongTinLHActivity">
    <android.support.v7.widget.Toolbar
        android:background="#35ffffff"
        app:titleTextColor="#FFF"
        app:title="Thông tin"
        android:id="@+id/toolBarTT"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"></android.support.v7.widget.Toolbar>
<FrameLayout
    android:id="@+id/frame"
    android:layout_margin="5dp"
    android:background="@drawable/custom_text"
    android:layout_centerVertical="true"
    android:layout_width="match_parent"
    android:layout_height="350dp">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <TextView
        android:layout_margin="10dp"
        android:textStyle="bold"
        android:textColor="#FFF"
        android:gravity="center"
        android:textSize="25sp"
        android:text="Thông tin liên hệ"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
        <TextView
            android:textStyle="italic"
            android:layout_margin="20dp"
            android:textColor="#9ba6a6"
            android:textSize="20sp"
            android:text="Họ và tên : Đỗ Tùng Lâm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:textSize="20sp"
            android:textStyle="italic"
            android:layout_margin="20dp"
            android:textColor="#9ba6a6"
            android:text="Gmail : tunglamdo96@gmail.com"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/txtSDTlh"
            android:textStyle="italic"
            android:layout_margin="20dp"
            android:textColor="#9ba6a6"
            android:textSize="20sp"
            android:text="SĐT : 0965795095"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:textStyle="italic"
            android:layout_margin="20dp"
            android:textColor="#9ba6a6"
            android:textSize="20sp"
            android:text="Địa chỉ : Triều Khúc - Thanh Xuân - HN"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
</FrameLayout>
</RelativeLayout>
